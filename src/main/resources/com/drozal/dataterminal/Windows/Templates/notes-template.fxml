<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextArea?>
<AnchorPane fx:id="main" prefHeight="285.0"
            style="-fx-background-radius: 0; -fx-border-radius: 0; -fx-background-color: transparent;"
            HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <TextArea fx:id="notepadTextArea" layoutY="56.0" prefHeight="337.0"
                  promptText="Suspect Info / Vehicle Info / Witness Info / Etc."
                  style="-fx-background-radius: 0; -fx-border-radius: 0; -fx-background-color: transparent;"
                  styleClass="text-area" stylesheets="@../../css/form/formTextArea.css" wrapText="true"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Segoe UI Semibold" size="28.0"/>
            </font>
        </TextArea>
        <Button fx:id="clearbtnnotepad" alignment="CENTER" layoutX="560.0" layoutY="235.0"
                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                mnemonicParsing="false" styleClass="incidentbtn"
                stylesheets="@../../css/menu/menuStyles.css" text="Clear" textFill="#0074b3"
                AnchorPane.bottomAnchor="14.0" AnchorPane.rightAnchor="14.0">
            <font>
                <Font name="Segoe UI Bold" size="18.0"/>
            </font>
        </Button>
        <ToggleButton fx:id="modeToggle" layoutX="588.0" layoutY="9.0" maxHeight="20.0" maxWidth="20.0"
                      minHeight="20.0" minWidth="20.0" mnemonicParsing="false"
                      prefHeight="20.0" prefWidth="20.0"
                      style="-fx-padding: 0; -fx-background-color: grey;" AnchorPane.rightAnchor="8.0"
                      AnchorPane.topAnchor="8.0"/>
        <Button fx:id="codesbtnnotepad" alignment="CENTER" layoutX="523.0" layoutY="230.0"
                maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                mnemonicParsing="false" styleClass="incidentbtn"
                stylesheets="@../../css/menu/menuStyles.css" text="Codes" textFill="#0074b3"
                AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0">
            <font>
                <Font name="Segoe UI Bold" size="18.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>