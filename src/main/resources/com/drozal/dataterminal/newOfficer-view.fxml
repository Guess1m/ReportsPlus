<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="vboxid" alignment="CENTER" onMouseEntered="#onMouseEnter"
      onMouseExited="#onMouseExit"
      prefHeight="401.0" prefWidth="498.0" xmlns="http://javafx.com/javafx/21"
      fx:controller="com.drozal.dataterminal.newOfficerController">
    <padding>
        <Insets bottom="0.0" left="0.0" right="0.0" top="0.0"/>
    </padding>
    <children>
        <AnchorPane prefHeight="484.0" prefWidth="498.0" scaleShape="false" style="-fx-background-color: #edf1f3;">
            <children>
                <Pane layoutX="-9.0" prefHeight="402.0" prefWidth="507.0">
                    <children>
                        <Pane layoutX="9.0" layoutY="77.0" prefHeight="334.0" prefWidth="498.0"
                              style="-fx-background-color: #2a2e3d;">
                            <children>
                                <Pane prefWidth="492.0">
                                    <children>
                                        <TextField fx:id="nameField" layoutX="20.0" layoutY="44.0" prefHeight="38.0"
                                                   prefWidth="264.0" promptText="Name"
                                                   stylesheets="@css/form/formFields.css">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="19.0"/>
                                            </font>
                                        </TextField>
                                        <TextField fx:id="numberField" layoutX="296.0" layoutY="44.0" prefHeight="38.0"
                                                   prefWidth="183.0" promptText="Number"
                                                   stylesheets="@css/form/formFields.css">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="19.0"/>
                                            </font>
                                        </TextField>
                                        <ComboBox fx:id="rankDropdown" layoutX="20.0" layoutY="96.0" prefHeight="38.0"
                                                  prefWidth="460.0" stylesheets="@css/form/formComboBox.css"
                                                  visibleRowCount="14"/>
                                        <ComboBox fx:id="agencyDropDown" layoutX="20.0" layoutY="148.0"
                                                  prefHeight="38.0" prefWidth="460.0"
                                                  stylesheets="@css/form/formComboBox.css" visibleRowCount="14"/>
                                        <ComboBox fx:id="divisionDropDown" layoutX="20.0" layoutY="200.0"
                                                  prefHeight="38.0" prefWidth="460.0"
                                                  stylesheets="@css/form/formComboBox.css" visibleRowCount="14"/>
                                        <Label layoutX="20.0" layoutY="7.0" prefHeight="38.0" prefWidth="163.0"
                                               styleClass="subheader" stylesheets="@css/form/formLabels.css"
                                               text="Sign In"/>
                                    </children>
                                </Pane>
                                <Button fx:id="loginBtn" layoutX="395.0" layoutY="257.0" mnemonicParsing="false"
                                        onAction="#loginButtonClick" prefHeight="37.0" prefWidth="85.0"
                                        stylesheets="@css/main/mainBtn.css" text="LOGIN" textFill="#008cd7">
                                    <font>
                                        <Font name="Candara Bold" size="18.0"/>
                                    </font>
                                </Button>
                                <Label alignment="CENTER" layoutX="20.0" layoutY="261.0" prefHeight="32.0"
                                       prefWidth="376.0" textAlignment="CENTER" textFill="#727272">
                                    <font>
                                        <Font name="Candara" size="22.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="incompleteLabel" alignment="CENTER" layoutX="20.0" layoutY="236.0"
                                       prefHeight="79.0" prefWidth="376.0" text="Please Fill Out the Form Completely."
                                       textAlignment="CENTER" textFill="#ff3c3c" visible="false">
                                    <font>
                                        <Font name="Candara" size="16.0"/>
                                    </font>
                                </Label>
                            </children>
                            <effect>
                                <DropShadow>
                                    <color>
                                        <Color red="0.46052631735801697" green="0.46052631735801697"
                                               blue="0.46052631735801697"/>
                                    </color>
                                </DropShadow>
                            </effect>
                        </Pane>
                        <Pane layoutX="9.0" layoutY="-1.0" onMouseDragged="#onMouseDrag" onMousePressed="#onMousePress"
                              prefHeight="79.0" prefWidth="498.0" style="-fx-background-color: #3f455a;">
                            <effect>
                                <DropShadow/>
                            </effect>
                            <children>
                                <Label layoutX="20.0" layoutY="6.0" text="DataTerminal" textAlignment="CENTER"
                                       textFill="WHITE">
                                    <font>
                                        <Font name="Candara" size="28.0"/>
                                    </font>
                                </Label>
                                <Label layoutX="20.0" layoutY="41.0" text="Record Tool" textAlignment="CENTER"
                                       textFill="#00a2ff">
                                    <font>
                                        <Font name="Candara" size="22.0"/>
                                    </font>
                                </Label>
                                <Label alignment="CENTER" layoutX="198.0" prefHeight="79.0" prefWidth="264.0"
                                       text="New Officer Sign In" textAlignment="CENTER" textFill="#c6c6c6">
                                    <font>
                                        <Font name="Candara" size="24.0"/>
                                    </font>
                                </Label>
                                <ImageView fx:id="exitButton" fitHeight="21.0" fitWidth="24.0" layoutX="466.0"
                                           layoutY="11.0" onMouseClicked="#onExitButtonClick" pickOnBounds="true"
                                           preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/icons/cross.png"/>
                                    </image>
                                </ImageView>
                            </children>
                        </Pane>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </children>
</VBox>
