<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx = "http://javafx.com/fxml/1" xmlns = "http://javafx.com/javafx/23.0.1"
            fx:controller = "com.Guess.ReportsPlus.LayoutBuilderController">
    <center>
        <AnchorPane prefHeight = "400.0" prefWidth = "600.0">
            <children>
                <VBox spacing = "10" AnchorPane.bottomAnchor = "10" AnchorPane.leftAnchor = "10"
                      AnchorPane.rightAnchor = "10" AnchorPane.topAnchor = "10">
                    <children>
                        <Label style = "-fx-font-size: 18px; -fx-font-weight: bold;" text = "Custom Layout Designer" />
                        <TextField fx:id = "reportTitleField" maxWidth = "125.0" promptText = "Report Title" />
                        <ScrollPane fitToHeight = "true" fitToWidth = "true">
                            <content>
                                <VBox spacing = "10.0">
                                    <children>
                                        <VBox fx:id = "sectionContainer" spacing = "10">
                                            <padding>
                                                <Insets bottom = "10" left = "10" right = "10" top = "10" />
                                            </padding>
                                        </VBox>
                                        <VBox fx:id = "transferContainer" spacing = "10">
                                            <padding>
                                                <Insets bottom = "10" left = "10" right = "10" top = "10" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                        <HBox spacing = "10">
                            <children>
                                <Button fx:id = "addSectionButton" text = "Add Section" />
                                <Button fx:id = "addTransferButton" text = "Add Transfer" />
                                <Button fx:id = "buildLayoutButton" text = "Build Layout" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
