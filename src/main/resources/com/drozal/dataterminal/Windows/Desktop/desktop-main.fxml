<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="679.0"
            prefWidth="811.0" style="-fx-background-color: transparent;" stylesheets=""
            xmlns="http://javafx.com/javafx/21" fx:controller="com.drozal.dataterminal.Desktop.mainDesktopController">
    <center>
        <VBox fx:id="container">
            <children>
                <AnchorPane fx:id="topBar" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                            prefHeight="25.0" prefWidth="811.0"
                            style="-fx-background-color: rgb(255,255,255,0.9); -fx-border-width: 0 0 0.5 0; -fx-border-color: gray;"
                            VBox.vgrow="NEVER">
                    <children>
                        <Label fx:id="locationDataLabel" alignment="CENTER" graphicTextGap="2.0"
                               text="Sandy Shores, Blaine County" textFill="#545454" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <font>
                                <Font name="Segoe UI Semibold" size="12.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="19.0" fitWidth="14.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../imgs/icons/location.png"/>
                                    </image>
                                    <effect>
                                        <ColorAdjust brightness="-0.52"/>
                                    </effect>
                                </ImageView>
                            </graphic>
                        </Label>
                        <BorderPane prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0"
                                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <right>
                                <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
                                    <children>
                                        <Label fx:id="versionLabel" alignment="CENTER" opacity="0.78"
                                               text="v1.0.9-alpha" textFill="#545454" textOverrun="CLIP">
                                            <font>
                                                <Font name="Segoe UI Black" size="12.5"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="dateLabel" alignment="CENTER" graphicTextGap="5.5" text="Date"
                                               textFill="#656565" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Segoe UI Black" size="13.0"/>
                                            </font>
                                            <graphic>
                                                <ImageView fitWidth="16.0" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imgs/icons/calendar.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Label>
                                        <Label fx:id="timeLabel" alignment="CENTER" graphicTextGap="5.0" text="Time"
                                               textFill="#656565" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Segoe UI Black" size="13.0"/>
                                            </font>
                                            <graphic>
                                                <ImageView fitWidth="18.0" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../../imgs/icons/clock.png"/>
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Label>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets right="20.0"/>
                                    </BorderPane.margin>
                                </HBox>
                            </right>
                            <left>
                                <HBox alignment="CENTER" spacing="3.5" BorderPane.alignment="CENTER">
                                    <children>
                                        <Label alignment="CENTER" text="Server Status:" textAlignment="CENTER"
                                               textFill="#545454" textOverrun="CLIP" HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Segoe UI Black" size="12.0"/>
                                            </font>
                                        </Label>
                                        <Label fx:id="serverStatusLabel" alignment="CENTER" text="Not Connected"
                                               textAlignment="CENTER" textFill="#ff5a5a" textOverrun="CLIP"
                                               HBox.hgrow="ALWAYS">
                                            <font>
                                                <Font name="Segoe UI Semibold" size="12.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                    <BorderPane.margin>
                                        <Insets left="20.0"/>
                                    </BorderPane.margin>
                                </HBox>
                            </left>
                        </BorderPane>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="desktopContainer" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="button1" mnemonicParsing="false" text="Button" AnchorPane.rightAnchor="15.0"
                                AnchorPane.topAnchor="15.0"/>
                    </children>
                </AnchorPane>
                <AnchorPane fx:id="bottomBar" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                            prefHeight="55.0" VBox.vgrow="NEVER">
                    <children>
                        <BorderPane fx:id="taskBar" layoutY="696.0" maxHeight="-Infinity" minHeight="-Infinity"
                                    prefHeight="55.0" style="-fx-background-color: rgb(0,0,0,0.4);"
                                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <center>
                                <HBox fx:id="taskBarApps" alignment="CENTER" spacing="10.0"
                                      BorderPane.alignment="CENTER"/>
                            </center>
                        </BorderPane>
                        <HBox layoutX="2.0" layoutY="-7.0" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="2.0"
                              AnchorPane.topAnchor="-7.0">
                            <children>
                                <AnchorPane>
                                    <children>
                                        <ImageView fitHeight="53.0" fitWidth="53.0" pickOnBounds="true"
                                                   AnchorPane.bottomAnchor="7.0" AnchorPane.leftAnchor="0.0"
                                                   AnchorPane.rightAnchor="18.5" AnchorPane.topAnchor="0.0">
                                            <image>
                                                <Image url="@../../imgs/icons/Logo.png"/>
                                            </image>
                                        </ImageView>
                                    </children>
                                </AnchorPane>
                                <BorderPane prefHeight="200.0">
                                    <center>
                                        <Button fx:id="createReportBtn" mnemonicParsing="false"
                                                onAction="#createReportBtn"
                                                style="-fx-padding: 3 10; -fx-background-color: rgb(255,255,255,0.5);"
                                                text="Create Report" BorderPane.alignment="CENTER">
                                            <BorderPane.margin>
                                                <Insets top="7.0"/>
                                            </BorderPane.margin>
                                            <font>
                                                <Font name="Segoe UI Black" size="13.0"/>
                                            </font>
                                        </Button>
                                    </center>
                                    <padding>
                                        <Insets left="20.0"/>
                                    </padding>
                                </BorderPane>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </center>
</BorderPane>
